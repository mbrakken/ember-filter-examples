<form class="pure-form">
  <label for="search-input">
    {{input elementId='search-input' value=search.searchString }} Showing {{filteredAlbums.length}} of {{albums.length}} albums
  </label>
</form>

<div class="pure-g">
  {{#each filteredAlbums as |album|}}
    <div class="pure-u-1-2 pure-u-sm-1-3 pure-u-md-1-4 pure-u-lg-1-6 l-box">
      {{#link-to 'filtered-array.album' album.id}}
        <div class="album-art-wrapper">
          <img class="album-art pure-img" src={{resized-image album.front_cover_art 'medium'}}>
        </div>
        <div class="one-line">{{album.title}}</div>
        <div class="one-line">{{album.main_artist_name}}</div>
      {{/link-to}}
    </div>
  {{/each}}
</div>
